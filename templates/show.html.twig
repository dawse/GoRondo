{% extends 'base.html.twig' %}
{% block body %}
<div class="jumbotron">
<div class="container">
<div class="row">

{% if property.filename %}
<img src="/images/event/{{ property.filename  }}" alt="card-img-top" style="width: 30%; height:auto;">
{% else %}
<img src="/images/event/download.png{{ property.filename  }}" alt="card-img-top" style="width: 30%; height: auto;">
{% endif %}

<div class="col-md-8">
</div>
